<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignupActivity">
    <ImageView
        android:id="@+id/ic_back_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/signup_backarrow"/>
    <ImageView
        android:layout_width="52dp"
        android:layout_height="7.9dp"
        android:src="@drawable/green_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="218.5dp"
        android:layout_marginTop="137dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/caros"
        android:text="@string/sign_up_with_email"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="181dp"
        android:layout_marginStart="31dp"
        android:letterSpacing="0.1"
        android:fontFamily="@font/circular_std"
        android:textColor="#797C7B"
        android:textAlignment="center"
        android:textSize="14sp"
        android:text="@string/signup_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="276dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/circular_std"
        android:text="@string/your_name"
        android:textSize="14sp"
        android:letterSpacing="0.1"
        android:textColor="#24786D"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/user_name"
        android:layout_width="327dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="280dp"
        android:inputType="text"
        />
    <TextView
        android:layout_width="95dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/circular_std"
        android:text="@string/your_email"
        android:textSize="14sp"
        android:letterSpacing="0.1"
        android:textColor="#24786D"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/user_email"
        android:layout_width="327dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="353dp"
        android:inputType="textWebEmailAddress"
        />
    <TextView
        android:layout_width="90dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="420dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/circular_std"
        android:text="@string/Password"
        android:textSize="14sp"
        android:letterSpacing="0.1"
        android:textColor="#24786D"
        android:textAlignment="textStart"
        />
    <EditText
        android:id="@+id/user_password"
        android:layout_width="327dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="424dp"
        android:inputType="textPassword"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="490dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/circular_std"
        android:text="@string/confirm_password"
        android:textSize="14sp"
        android:letterSpacing="0.1"
        android:textColor="#24786D"
        android:gravity="start"
        />
    <EditText
        android:id="@+id/user_confirm_password"
        android:layout_width="330dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="495dp"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/btn_create_an_account"
        android:layout_width="327dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/create_an_account"
        android:layout_marginTop="670dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="@drawable/button_new_acount_text_colors"
        android:background="@drawable/button_new_account"
        />



</androidx.constraintlayout.widget.ConstraintLayout>