<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000E08">
    <ImageView
        android:id="@+id/Settings_back_arrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="74dp"
        android:src="@drawable/ic_white_backarrow" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/caros"
        android:text="@string/settings"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="677dp"
        android:background="@drawable/background_vertical_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="245dp"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/settings_profile_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="46dp"
            app:shapeAppearanceOverlay="@style/circleImageView" />
        <TextView
                    android:id="@+id/settings_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="52dp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/caros"
                    android:lineHeight="20dp"
                    android:text="Mahmoud Tarek"
                    android:textFontWeight="600"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/settings_profile_picture"
                    app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/settings_bio"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/circular_std"
            android:lineHeight="12dp"
            android:text="Never give up ðŸ’ª"
            android:textFontWeight="450"
            app:layout_constraintStart_toEndOf="@+id/settings_profile_picture"
            app:layout_constraintTop_toBottomOf="@+id/settings_user_name"
            android:layout_marginTop="8dp"/>
        <ImageView
            android:id="@+id/settings_QrCode"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_qr_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="24dp"/>

        <ImageView
            android:id="@+id/ic_divider_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:src="@drawable/divider_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_settings_Account"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_key"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_divider_line"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            />
        <TextView
            android:id="@+id/settings_account"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:text="@string/account"
            android:fontFamily="@font/caros"
            android:textFontWeight="500"
            android:textSize="16dp"
            android:lineHeight="16dp"
            android:textColor="#000E08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_divider_line"
            android:layout_marginStart="80dp"
            android:layout_marginTop="28dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_account"
            android:layout_marginStart="80dp"
            android:layout_marginTop="2dp"
            android:text="Privacy, security, change number"
            android:fontFamily="@font/circular_std"
            android:textFontWeight="450"
            android:lineHeight="12dp"
            />

        <ImageView
            android:id="@+id/ic_settings_chat"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_chat"
            app:layout_constraintTop_toBottomOf="@id/ic_settings_Account"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            />
        <TextView
            android:id="@+id/settings_chat"
            android:layout_width="44dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_divider_line"
            android:layout_marginStart="80dp"
            android:layout_marginTop="92dp"
            android:text="Chat"
            android:fontFamily="@font/caros"
            android:textFontWeight="500"
            android:textSize="16dp"
            android:lineHeight="16dp"
            android:textColor="#000E08"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_chat"
            android:layout_marginStart="80dp"
            android:layout_marginTop="2dp"
            android:text="Chat history,theme,wallpapers"
            android:fontFamily="@font/circular_std"
            android:textFontWeight="450"
            android:lineHeight="12dp"/>

        <ImageView
            android:id="@+id/ic_settings_notifications"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_notifications"
            app:layout_constraintTop_toBottomOf="@id/ic_settings_chat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            />
        <TextView
            android:id="@+id/settings_notifications"
            android:layout_width="108dp"
            android:layout_height="18dp"
            android:text="Notifications"
            android:fontFamily="@font/caros"
            android:textFontWeight="500"
            android:textSize="16dp"
            android:lineHeight="16dp"
            android:textColor="#000E08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_divider_line"
            android:layout_marginTop="162dp"
            android:layout_marginStart="80dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_notifications"
            android:layout_marginStart="80dp"
            android:layout_marginTop="2dp"
            android:text="@string/messages_group_and_others"
            android:fontFamily="@font/circular_std"
            android:textFontWeight="450"
            android:lineHeight="12dp"
        />
        
        <ImageView
            android:id="@+id/ic_settings_help"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_help"
            app:layout_constraintTop_toBottomOf="@id/ic_settings_notifications"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            />
        <TextView
            android:id="@+id/settings_help"
            android:layout_width="40dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_divider_line"
            android:layout_marginStart="80dp"
            android:layout_marginTop="228dp"
            android:text="@string/help"
            android:fontFamily="@font/caros"
            android:textFontWeight="500"
            android:textSize="16dp"
            android:lineHeight="16dp"
            android:textColor="#000E08"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_help"
            android:layout_marginStart="80dp"
            android:layout_marginTop="2dp"
            android:text="@string/help_center_contact_us_privacy_policy"
            android:fontFamily="@font/circular_std"
            android:textFontWeight="450"
            android:lineHeight="12dp"
            />

        <ImageView
            android:id="@+id/ic_settings_storage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_storage"
            app:layout_constraintTop_toBottomOf="@id/ic_settings_help"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            />
        <TextView
            android:id="@+id/settings_storageAndData"
            android:layout_width="161dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ic_divider_line"
            android:layout_marginStart="80dp"
            android:layout_marginTop="300dp"
            android:text="@string/storage_and_data"
            android:fontFamily="@font/caros"
            android:textFontWeight="500"
            android:textSize="16dp"
            android:lineHeight="16dp"
            android:textColor="#000E08"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_storageAndData"
            android:layout_marginStart="80dp"
            android:layout_marginTop="2dp"
            android:text="Network usage, stogare usage"
            android:fontFamily="@font/circular_std"
            android:textFontWeight="450"
            android:lineHeight="12dp"/>

        <ImageView
            android:id="@+id/ic_settings_invite"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_invite"
            app:layout_constraintTop_toBottomOf="@id/ic_settings_storage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            />
        <TextView
            android:id="@+id/settings_invite"
            android:layout_width="130dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_divider_line"
            android:layout_marginStart="80dp"
            android:layout_marginTop="365dp"
            android:text="@string/invite_a_friend"
            android:fontFamily="@font/caros"
            android:textFontWeight="500"
            android:textSize="16dp"
            android:lineHeight="16dp"
            android:textColor="#000E08"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>